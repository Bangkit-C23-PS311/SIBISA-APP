<resources>
    <!-- Base application theme. -->
    <style name="Theme.SIBISA" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/navy</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="sibisa">
        <item name="android:textSize">64sp</item>
        <item name="android:textColor">#CBB279</item>
        <item name="android:shadowColor">#99000000</item>
        <item name="android:shadowDx">10</item>
        <item name="android:shadowDy">10</item>
        <item name="android:shadowRadius">6</item>
    </style>

    <style name="sibisa_login">
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">#CBB279</item>
    </style>

</resources>